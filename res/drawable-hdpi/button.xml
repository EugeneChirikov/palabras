<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/violet"
                android:endColor="@color/violet"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/violet" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:right="10dp"
                android:top="2dp"
                android:bottom="2dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="@color/violet_light"
                android:startColor="@color/violet_light"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="@color/violet_light" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:right="10dp"
                android:top="2dp"
                android:bottom="2dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:endColor="@color/violet_light"
                android:startColor="@color/violet_light"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/violet_light" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:right="10dp"
                android:top="2dp"
                android:bottom="2dp" />
        </shape>
    </item>
</selector>